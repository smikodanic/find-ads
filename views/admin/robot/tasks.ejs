<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../0partials/01head'); -%>
</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <%- include('../0partials/05top_menu'); -%>
            <%- include('../0partials/10left_menu'); -%>
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        
                        <h1 class="page-header">
                            Robot Tasks
                        </h1>

                        <ol class="breadcrumb">
                          <li>Web Robot</li>
                          <li><a href="/admin/robot/tasks/">Robot Tasks</a></li>
                        </ol>

                        Robot tasks for bulk crawling.
                        <br>
                        <br>Cron jobs insert in 6 fields format: <i>sec[0-59] min[0-59] hours[0-23] dayOfMonth[1-31] Months[0-11] dayOfWeek[0-6]</i>
                        <br>Example: <b style="color:brown">00 30 11 * * 1-5</b>
                        <span style="font:10px Verdana">Runs every weekday (Monday through Friday)at 11:30:00 AM. It does not run on Saturday or Sunday.</span>

                    </div>
                </div>
                <!-- Page Heading end -->

                <div class="clearfix">&nbsp;</div>
                <div class="row">

                    <!-- table -->
                    <div class="col-lg-12">
                        <table class="table table-stripped table-hover table-condensed table-bordered">
                            
                            <tr>
                                <th title="content task ID">id</th>
                                <th title="content task name">name</th>
                                <th title="linkQueue collection">link queue coll.</th>
                                <th title="CSS selectors for extracting data">extracted data</th>
                                <th title="MongoDB collection name">content coll.</th>
                                <th title="Crawling depth">depth</th>
                                <th title="Poll interval in miliseconds">poll (ms)</th>
                                <th title="cron job - status">cron</th>
                                <th style="width:130px">action</th>
                            </tr>


                            <% tasks.forEach(function (elem) { %>
                            <tr style="font-size:smaller">
                              <td><%= elem.id %></td>
                              <td><%= elem.name %></td>
                              <td><%= elem.linkqueueCollection %></td>
                              <td>
                                <% elem.selectors.forEach(function (elem) { %>
                                  <%= elem.name %>,
                                <% }); %>
                              </td>
                              <td><%= elem.contentCollection %></td>
                              <td style="text-align:center"><%= elem.crawlDepth %></td>
                              <td  style="text-align:center"><%= elem.pollInterval %></td>
                              <td  style="text-align:center"><%= elem.cron + ' - ' + elem.cronStatus %></td>

                              <td>
                                
                                <a href="/admin/robot/tasks/delete/<%= elem.id %>" class="fa fa-trash deleteTask" title="delete"></a>
                                <a href="/admin/robot/tasks/edit/<%= elem.id %>" class="fa fa-pencil-square-o editTask" title="edit"></a>
                                <a href="/admin/robot/tasks/start/<%= elem.id %>" class="fa fa-play crawlStart" title="crawl now" data-taskid="<%= elem.id %>"></a>
                                <a href="/admin/robot/linkqueue/?q=&task_id=<%= elem.id %>&currentPage=1" class="fa fa-eye" title="see link queue" data-taskid="<%= elem.id %>"></a>
                              
                              </td>

                            </tr>
                            <% }); %>

                        </table>


                        <div class="clearfix">&nbsp;</div><br>

                        <!-- delete all documents -->                        
                        <a href="/admin/robot/tasks" class="btn btn-info btn-sm" id="insertTask">Insert New Task</a>
                        <a href="/admin/robot/tasks/disable" class="btn btn-info btn-sm">Disable All Crons</a>
                        <!-- <a href="/admin/robot/tasks/delete/all" class="btn btn-danger btn-sm" id="deleteAll">Delete All Tasks</a> -->

                    </div>

                </div><!-- /.row -->

                
                <!-- insert/update form -->
                <div class="row">

                    <div class="col-sm-10 col-sm-offset-1 lightbox" id="lightbox-form">

                        <span class="fa fa-times-circle close lightbox-close"></span>


                        <% //define form action value
                          var act, tit;
                          if (task.id !== undefined) {
                            act = '/admin/robot/tasks/update/' + task.id;
                            tit = 'Edit Task';
                          } else {
                            act = '/admin/robot/tasks/insert';
                            tit = 'Insert New Task';
                          }
                      %>

                        <h3><%= tit %></h3>

                        <form action="<%= act %>" method="POST" enctype="application/x-www-form-urlencoded" class="form-horizontal">
                            
                        <div class="form-group">
                          <label for="id" class="col-sm-3 control-label" title="Task id number. Readonly value.">ID:</label>
                          <div class="col-sm-2">
                            <input type="text" name="id" id="id" value="<%= task.id %>" class="form-control" readonly>
                          </div>
                        </div>


                        <div class="form-group">
                          <label for="name" class="col-sm-3 control-label" title="Task name for extracting content.">Name:</label>
                          <div class="col-sm-7">
                            <input type="text" name="name" id="name" value="<%= task.name %>" class="form-control" required>
                          </div>
                        </div>

                        <div class="form-group">
                          <label class="col-sm-3 control-label" for="description" title="Short description of this task.">Description:</label>
                          <div class="col-sm-7">
                            <textarea name="description" id="description" class="form-control" rows="2" required><%= task.description %></textarea>
                          </div>
                        </div>

                        <div class="form-group">
                            <label for="category" class="col-sm-3 control-label" title="Select category for this task.">Category:</label>
                            <div class="col-sm-4">
                              <select name="category" id="category" class="form-control">
                                    <option value="">All</option>

                                  <% cats.forEach(function(elem){ %>
                                    <option value="<%= elem.id %>" <%= (task.category == elem.id ) ? 'selected' : ''; %> ><%= elem.category %> (<%= elem.id %>)</option>
                                  <% }); %>
                              </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="subcategory" class="col-sm-3 control-label" title="Select subcategory relevant to selected category.">Subcategory:</label>
                            <div class="col-sm-4">
                              <select name="subcategory" id="subcategory" class="form-control">

                              </select>
                            </div>
                        </div>


                        <!-- crawl settings -->
                        <div class="col-sm-5 col-sm-offset-1">
                          <h4>Crawl settings</h4>
                        </div>
                        <div class="clearfix">&nbsp;</div>

                        <div class="form-group">
                          <label for="seedURL" class="col-sm-3 control-label" title="Set the URL from which crawler will start crawling.">Seed URL:</label>
                          <div class="col-sm-8">
                            <input type="text" name="seedURL" id="seedURL" value="<%= task.seedURL %>" class="form-control" required>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="pollInterval" class="col-sm-3 control-label" title="Set the poll interval between two crawlings in miliseconds. It's crawling speed.">Polling Interval:</label>
                          <div class="col-sm-2">
                            <input type="text" name="pollInterval" id="pollInterval" value="<%= (task.pollInterval != undefined) ?  task.pollInterval : '35000' %>" class="form-control" required>
                          </div>
                          <label class="control-label">ms</label>
                        </div>

                        <div class="form-group">
                          <label for="pollScript" class="col-sm-3 control-label" title="Select script which will call links to be crawled.">Polling Script:</label>
                          <div class="col-sm-4">
                            <select name="pollScript" id="pollScript" class="form-control">

                                <% pollingFiles.forEach(function(elem){ %>
                                <option value="<%= elem %>" <%= (task.pollScript == elem) ? 'selected' : ''; %> ><%= elem %></option>
                                <% }); %>

                            </select>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="httpclientScript" class="col-sm-3 control-label" title="Select script where HTTP Client is defined.">HTTP Client Script:</label>
                          <div class="col-sm-4">
                            <select name="httpclientScript" id="httpclientScript" class="form-control">

                                <% httpclientFiles.forEach(function(elem){ %>
                                <option value="<%= elem %>" <%= (task.httpclientScript == elem) ? 'selected' : ''; %> ><%= elem %></option>
                                <% }); %>

                            </select>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="crawlDepth" class="col-sm-3 control-label" title="Set the crawl depth e.g. how deep will crawl go from seed URL.">Crawl Depth:</label>
                          <div class="col-sm-2">
                            <input type="text" name="crawlDepth" id="crawlDepth" value="<%= (task.crawlDepth != undefined) ?  task.crawlDepth : '3' %>" class="form-control" required>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="seedDomainOnly" class="col-sm-3 control-label" title="Follow only links from this domain.">Crawl only seed domain:</label>
                          <div class="col-sm-2">
                            <select name="seedDomainOnly" id="seedDomainOnly" class="form-control">
                              <option value="yes" <%= (task.id !== undefined && task.seedDomainOnly == 'yes' ) ? 'selected' : ''; %> >yes</option>
                              <option value="no" <%= (task.id !== undefined && task.seedDomainOnly == 'no' ) ? 'selected' : ''; %> >no</option>
                            </select>
                          </div>
                        </div>
                        <!-- crawl settings END -->




                        <!-- cron settings -->
                        <div class="col-sm-5 col-sm-offset-1">
                          <h4>Cron settings</h4>
                        </div>
                        <div class="clearfix">&nbsp;</div>

                        <div class="form-group">
                          <label for="cron" class="col-sm-3  control-label" title="Cron job schedule. Example: 0 17 ? * 0,4-6">Cron:</label>
                          <div class="col-sm-4">
                            <input type="text" name="cron" id="cron" value="<%= (task.cron !== undefined) ? task.cron : '00 50 20 * * 1' %>" class="form-control" required>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="cronStatus" class="col-sm-3 control-label" title="If you want cron job to become active select 'on'. Otherwise select 'off'.">Cron Status:</label>
                          <div class="col-sm-2">
                            <select name="cronStatus" id="cronStatus" class="form-control">
                              <option value="on" <%= (task.cronStatus == 'on' ) ? 'selected' : ''; %> >on</option>
                              <option value="off" <%= (task.id === undefined || task.cronStatus == 'off' ) ? 'selected=selected' : ''; %> >off</option>
                            </select>
                          </div>
                        </div>
                        <!-- cron settings END -->



                        <!-- DB settings -->
                        <div class="col-sm-5 col-sm-offset-1">
                          <h4>DB Settings</h4>
                        </div>
                        <div class="clearfix">&nbsp;</div>

                        
                        <div class="form-group">
                            <label for="linkqueueCollection" class="col-sm-3 control-label" title="MongoDB collection where link URLs will be stored.">Link queue collection:</label>
                            <div class="col-sm-2">
                              <!-- suggest some MongoDB collection names -->
                              <select name="suggestCollection1" class="form-control" style="background:silver">
                                <option value="" style="color:Gray">Select suggestion</option>
                                <option value="robot_linkqueue">robot_linkqueue</option>
                                <option value="robot_linkqueue_dump">robot_linkqueue_dump</option>
                                <option value="robot_linkqueue_test">robot_linkqueue_test</option>
                              </select>
                            </div>
                            <div class="col-sm-4">
                              <input type="text" name="linkqueueCollection" id="linkqueueCollection" value="<%= task.linkqueueCollection %>" class="form-control" placeholder="MongoDB collection name" required>
                            </div>
                          </div>

                        <div class="form-group">
                            <label for="contentCollection" class="col-sm-3 control-label" title="MongoDB collection where content will be stored.">Content collection:</label>
                            <div class="col-sm-2">
                              <!-- suggest some MongoDB collection names -->
                              <select name="suggestCollection2" class="form-control" style="background:silver">
                                <option value="" style="color:Gray">Select suggestion</option>
                                <option value="robot_content">robot_content</option>
                                <option value="robot_content_dump">robot_content_dump</option>
                                <option value="robot_content_test">robot_content_test</option>
                                <option value="robot_content_bak">robot_content_bak</option>
                                <% cats.forEach(function(elem){ %>
                                    <option value="robot_content_<%= elem.category %>" >robot_content_<%= elem.category %></option>
                                <% }); %>
                              </select>
                            </div>
                            <div class="col-sm-4">
                              <input type="text" name="contentCollection" id="contentCollection" value="<%= (task.contentCollection !== undefined) ? task.contentCollection : 'robot_content' %>" class="form-control" placeholder="MongoDB collection name" required>
                            </div>
                          </div>
                        <!-- DB settings end -->



                        <!-- selectors -->
                        <div class="col-sm-5 col-sm-offset-1">
                          <h4>Extracted Content</h4>
                        </div>
                        <div class="clearfix">&nbsp;</div>

                        <div class="col-sm-12"  id="selectors">

                          <div class="form-group">
                            <label for="" class="col-sm-3 control-label" title="Define CSS selectors in name=value pair.">Selectors:</label>
                            <div class="col-sm-2">
                              <button class="btn btn-success btn-sm" title="Add new name=value pair" id="addSel">Add new selector</button>
                            </div>
                          </div>                          
                          



                          <% //when INSERT NEW TASK
                           if (task.id === undefined) { 
                          %>

                          <div class="form-group">
                            <div class="col-sm-2 col-sm-offset-3">
                              <select name="selectorType[]" class="form-control">
                                <option value="text">text</option>
                                <option value="html">html</option>
                                <option value="href">url or href attribute</option>
                                <option value="src">image or src attribute</option>
                                <option value="attr">any HTML attribute</option>
                              </select>
                            </div>
                            <div class="col-sm-2">
                              <input type="text" name="selectorName[]" value="title" class="form-control" placeholder="name" required>
                            </div>
                            <div class="col-sm-4">
                              <input type="text" name="selectorValue[]" value="title" class="form-control" placeholder="value" required>
                            </div>
                            <div class="col-sm-1">
                              <label for="" class="col-sm-3 control-label fa fa-times-circle remSel" title="Delete this selector"></label>
                            </div>
                          </div>
  
                          <div class="form-group">                          
                            <div class="col-sm-2 col-sm-offset-3">
                              <select name="selectorType[]" class="form-control">
                                <option value="text">text</option>
                                <option value="html">html</option>
                                <option value="href">url or href attribute</option>
                                <option value="src" selected>image or src attribute</option>
                                <option value="attr">any HTML attribute</option>
                              </select>
                            </div>
                            <div class="col-sm-2">
                              <input type="text" name="selectorName[]" value="image" class="form-control" placeholder="name" required>
                            </div>
                            <div class="col-sm-4">
                              <input type="text" name="selectorValue[]" value="img[src^=http]" class="form-control" placeholder="value" required>
                            </div>
                            <div class="col-sm-1">
                              <label for="" class="col-sm-3 control-label fa fa-times-circle remSel" title="Delete this selector"></label>
                            </div>
                          </div>

                          <div class="form-group"> 
                            <div class="col-sm-2 col-sm-offset-3">
                              <select name="selectorType[]" class="form-control">
                                <option value="text">text</option>
                                <option value="html">html</option>
                                <option value="href">url or href attribute</option>
                                <option value="src">image or src attribute</option>
                                <option value="attr">any HTML attribute</option>
                              </select>
                            </div>                         
                            <div class="col-sm-2">
                              <input type="text" name="selectorName[]" value="body_text" class="form-control" placeholder="name" required>
                            </div>
                            <div class="col-sm-4">
                              <input type="text" name="selectorValue[]" value="body" class="form-control" placeholder="value" required>
                            </div>
                            <div class="col-sm-1">
                              <label for="" class="col-sm-3 control-label fa fa-times-circle remSel" title="Delete this selector"></label>
                            </div>
                          </div>

                          <div class="form-group"> 
                            <div class="col-sm-2 col-sm-offset-3">
                              <select name="selectorType[]" class="form-control">
                                <option value="text">text</option>
                                <option value="html">html</option>
                                <option value="href">url or href attribute</option>
                                <option value="src">image or src attribute</option>
                                <option value="attr" selected>any HTML attribute</option>
                              </select>
                            </div>                         
                            <div class="col-sm-2">
                              <input type="text" name="selectorName[]" value="keywords" class="form-control" placeholder="name" required>
                            </div>
                            <div class="col-sm-4">
                              <input type="text" name="selectorValue[]" value="meta[name=keywords],content" class="form-control" placeholder="value" required>
                            </div>
                            <div class="col-sm-1">
                              <label for="" class="col-sm-3 control-label fa fa-times-circle remSel" title="Delete this selector"></label>
                            </div>
                          </div>

                          <% 
                            } else { //when UPDATE TASK
                              var propArr, selectorName, selectorValue;
                              task.selectors.forEach(function (elem, key) {

                                selType = elem.type;
                                selName = elem.name;
                                selValue = elem.value;
                          %>

                          <div class="form-group">                          
                            <div class="col-sm-2 col-sm-offset-3">
                              <select name="selectorType[]" class="form-control">
                                <option value="text" <%= (selType === 'text') ? 'selected' : '' %> >text</option>
                                <option value="html" <%= (selType === 'html') ? 'selected' : '' %> >html</option>
                                <option value="href" <%= (selType === 'href') ? 'selected' : '' %> >url or href attribute</option>
                                <option value="src" <%= (selType === 'src') ? 'selected' : '' %> >image or src attribute</option>
                                <option value="attr" <%= (selType === 'attr') ? 'selected' : '' %> >any HTML attribute</option>
                              </select>
                            </div>
                            <div class="col-sm-2">
                              <input type="text" name="selectorName[]" value="<%= selName %>" class="form-control" required>
                            </div>
                            <div class="col-sm-4">
                              <input type="text" name="selectorValue[]" value="<%= selValue %>" class="form-control" required>
                            </div>
                            <div class="col-sm-1">
                              <label for="" class="col-sm-3 control-label fa fa-times-circle remSel" title="Delete this selector"></label>
                            </div>
                          </div>

                          <%
                              }); //forEach end
                            } //else end
                          %>

                        </div>
                        <!-- selectors end -->
                        

                        <div class="clearfix">&nbsp;</div>

                        <div class="form-group">
                          
                          <div class="col-sm-4 col-sm-offset-3">
                            <input type="submit" value="<%= (task.id !== undefined) ? 'Update' : 'Insert'; %>" class="btn btn-info btn-lg">
                          </div>

                          <% if (task.id !== undefined) { %>
                            <div class="col-sm-4">
                              <input type="submit" value="Insert Simmilar" class="btn btn-info btn-lg" formaction="/admin/robot/tasks/insert">
                            </div>
                          <% } %>

                        </div>

                        </form>
                    </div>

                </div><!-- .row end -->
                <!--  insert/update form end -->


                <!-- delete task -->
                <div class="row">
                  <div class="col-sm-4 col-sm-offset-4 lightbox" id="lightbox-delete">
                    <span class="fa fa-times-circle close lightbox-close"></span>
                    <p>Do you want to delete this task?</p>
                    <br>
                    <a href="" id="deleteTaskYes" class="btn btn-danger">Yes</a>
                    <button id="deleteTaskNo" class="btn btn-warning lightbox-close">No, thanks</button>
                  </div>
                </div>
                <!-- delete task end -->


                <!-- lightbox crawling console -->
                <div class="row">
                  <div class="col-sm-12 lightbox" id="lightbox-console">
                    <span class="fa fa-times-circle close lightbox-close"></span>
                    <h3>Crawling content results</h3>
                    <a href="/admin/robot/tasks/stop" class="btn btn-danger btn-lg">STOP crawling</a>
                    <iframe src="" frameborder="1"></iframe>
                  </div>
                </div>
                <!-- lightbox crawling console end-->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    



<script>
/* Bootstrap tooltip activation */
$(document).ready(function(){
   
   var options = {
    placement: "right",
    delay: 200
   };

   /*
    * tooltip apper on dynamically created elements
    * for example: <label for="" class="col-sm-3 control-label fa fa-times-circle remSel" title="Delete this selector"></label>
    */
   $(document).on('mouseover', 'label, a.fa, button', function () {
      $(this).tooltip(options);
   });
   
});
</script>

<script>
  //Adding new selector e.g. name=value pair
  $('#addSel').on('click', function (event) {
    event.preventDefault();
    
    var htmlCode = '\
    <div class="form-group">\
      <div class="col-sm-2 col-sm-offset-3">\
        <select name="selectorType[]" class="form-control">\
          <option value="text">text</option>\
          <option value="html">html</option>\
          <option value="href">url or href attribute</option>\
          <option value="src">image or src attribute</option>\
          <option value="attr">any HTML attribute</option>\
        </select>\
      </div>\
      <div class="col-sm-2">\
        <input type="text" name="selectorName[]" value="" class="form-control" placeholder="name" required>\
      </div>\
      <div class="col-sm-4">\
        <input type="text" name="selectorValue[]" value="" class="form-control" placeholder="value" required>\
      </div>\
      <div class="col-sm-1">\
        <label for="" class="col-sm-3 control-label fa fa-times-circle remSel" title="Delete this selector"></label>\
      </div>\
    </div>';

    $('#selectors').append(htmlCode);
  });



  //removing selector e.g. name=value pair
  $(document).on('click', '.remSel', function () { //works on dynamically created .remSel elements
    $(this).parents().eq(1).fadeOut(1200, function () { //fadeOut HTML tag
      $(this).remove(); //remove HTML tag
    });
  });

</script>


<script>
//show link to crawling results
$('#linkQueue').change(function () {

  var linkQueue_val = $(this).val();

  if (linkQueue_val !== '') {
    var taskName = linkQueue_val.replace('linkQueue_', '');
    $('#linkResults')
      .html('<a href="/admin/crawllinks/resultsiteration/?q=&taskName=' + taskName + '&currentPage=1" target="_blank">Preview links for <b>' + taskName + '</b> task!</a>')
      .hide()
      .fadeIn(1500);

    //set name value
    $('#name').val(taskName);
  } else {
    $('#linkResults').fadeOut(1500);
  }

});
</script>


<script>
/* append relevant subcategories into SELECT tag */
  $(document).ready(function(){

    //option tag for task to edit
    var task = <%- JSON.stringify(task, null, 2) %>; //sent from links.js controller file
    if (task.subcategory !== undefined) {
      $('#subcategory').html('<option value="' + task.subcategory + '"> (' + task.subcategory + ') </option>');
    }

    $('#category').change(function(){
      var val = $(this).val();
      var cats = <%- JSON.stringify(cats, null, 2) %>; //'cats' comes from links_iterateurl.ejs
      
      $('#subcategory > option').remove();

      // console.log(JSON.stringify(cats[val].subcats, null, 2));
      if (cats[val] !== undefined) {
        cats[val].subcats.forEach(function (elem, index) {

          $('#subcategory').append('<option value="' + index + '">' + elem + '(' + index + ')' + '</option>');
          // console.log(elem);
        });
      }

      $('#subcategory').prepend('<option value="" selected>All</option>');

    });

  });
</script>



<script>
/*LIGHTBOX*/

//lightbox function
var lightbox = function (sel) {
  
  //width and height of browser's window
  var bw = $(window).width();
  var bh = $(window).height();

  //CSS options
  var cssOpt = {
    "width": bw + "px !important",
    "height": bh + 'px !important',
    "position": "absolute",
    "top": "0px",
    "left": "0px"
  }

  $(sel).fadeIn(1200).css(cssOpt);
};


$(document).ready(function () {
  
