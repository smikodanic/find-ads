<!doctype html> 
<html lang="en"> 
<head>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
  <meta charset="utf-8">
  <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <!--[if lt IE 9]>
        <script src="/javascriptss/ie/html5shiv.min.js"></script>
        <script src="/javascriptss/ie/respond.min.js"></script>
    <![endif]-->
  <title><%= title %></title>
  <meta name="description" content="">
  <meta name="keywords" content="">
  <meta name="author" content="AdAm">
  <meta name="robots" content="noindex,nofollow">
  <meta name="googlebot" content="noindex,nofollow">
  <link rel="icon" href="/public/images/favicon.ico" type="image/ico">
  
  <!-- bootstrap --> 
  <meta name="viewport" content="width=device-width, maximum-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/themes/admin-sb/css/bootstrap.min.css">
 
  
  <!-- CSS & JS -->
  <link rel="stylesheet" type="text/css" href="/stylesheets/admin.css">
</head>
<body style="margin-top:50px;"> 

<main>

<div class="col-sm-5 col-sm-push-3">
  <div class="panel panel-warning">
    <div class="panel-heading"><%= title %></div>
    <div class="panel-body">
    
    <!-- login form -->
<form action="/admin/login" method="POST" enctype="application/x-www-form-urlencoded" class="form-horizontal">

  <div class="form-group">
    <label for="username" class="col-sm-4  control-label">Username:</label>
    <div class="col-sm-7">
      <input type="text" id="username" name="username" value="" class="form-control" data-toggle="tooltip" data-placement="top">
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="col-sm-4  control-label">Pasword:</label>
    <div class="col-sm-7">
      <input type="password" id="password" name="password" value="" class="form-control" data-toggle="tooltip" data-placement="top">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4"></label>
    <div class="col-sm-4">
      <input type="submit" value="Login" class="btn  btn-info btn-lg">
    </div>
  </div>

</form>

    <!-- login form end -->
    
    </div>
  </div>
</div>


<!-- Alert on bad login -->
<div class="col-sm-12">
  <% if (loginerror) { %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Bad login!</strong> Username or password incorrect.
  </div>
  <% } %>
</div>

</main>

</body> 
</html>